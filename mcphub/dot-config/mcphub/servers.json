{
  "mcpServers": {
    "fetch": {
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/fetch"
      ],
      "command": "docker",
      "disabled": false
    },
    "memory": {
      "args": [
        "run",
        "-i",
        "-v",
        "claude-memory:/app/dist",
        "--rm",
        "mcp/memory"
      ],
      "command": "docker",
      "disabled": false
    },
    "time": {
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/time"
      ],
      "command": "docker",
      "disabled": false
    },
    "tavily-remote": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.tavily.com/mcp/?tavilyApiKey=${TAVILY_API_KEY}"
      ]
    }
  },
  "nativeMCPServers": {
    "neovim": {
      "autoApprove": [],
      "custom_instructions": {
        "disabled": false
      },
      "disabled_tools": []
    }
  }
}
