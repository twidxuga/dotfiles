{
  "mcpServers": {
    "fetch": {
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/fetch"
      ],
      "command": "docker",
      "disabled": false
    },
    "time": {
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/time"
      ],
      "command": "docker",
      "disabled": false
    },
    "tavily-remote": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.tavily.com/mcp/?tavilyApiKey=${TAVILY_API_KEY}"
      ],
      "disabled": false
    },
    "playwright": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "--init", "-e", "BROWSER=firefox", "--pull=always", "mcr.microsoft.com/playwright/mcp"],
      "disabled": false
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest","--headless"],
      "disabled": false
    },
    "postgres": {
      "command": "docker",
      "args": [  
        "run",  
        "-i",  
        "--rm",  
        "mcp/postgres",  
        "${POSTGRESQL_URL}"
      ]
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.notion.com/mcp", "--transport", "http-first"],
      "disabled": false
    },
    "linear": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"],
      "disabled": false
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "slack-mcp-server@latest", "--transport", "stdio"],
      "env": {
        "SLACK_MCP_XOXC_TOKEN": "${SLACK_MCP_XOXC_TOKEN}",
        "SLACK_MCP_XOXD_TOKEN": "${SLACK_MCP_XOXD_TOKEN}",
        "SLACK_MCP_ADD_MESSAGE_TOOL": "true"
      },
      "disabled": false
    }
  },
  "nativeMCPServers": {
    "neovim": {
      "autoApprove": [],
      "custom_instructions": {
        "disabled": false
     },
      "disabled_tools": []
    }
  }
}
