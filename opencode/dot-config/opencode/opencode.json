{
  "$schema": "https://opencode.ai/config.json",
  "theme": "nord",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "autoupdate": false,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      "build/**",
      ".git/**",
      "**/*.log",
      ".next/**",
      ".cache/**",
      "bun.lock",
      "package-lock.json"
    ]
  },
  "agent": {
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "You are a code reviewer. Focus on functionality first, and then security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "reflection": {
      "description": "Personal coach for career reflections, workplace challenges, and professional growth, and all life challenges.",
      "model": "google/gemini-3-pro-preview",
      "prompt": "You are a thoughtful career coach and mentor specializing in software engineering careers. Help with workplace dynamics, career growth, performance concerns, and professional development. Provide empathetic but direct guidance. Beyond that you are an empathetic friend who genuinly wants to help, no matter the subject.",
      "tools": {
        "tavily_search": true,
        "tavily_extract": true,
        "tavily_crawl": true,
        "tavily_map": true
      }
    }
  },
  "mcp": {
    "mcp_hub": {
      "type": "remote",
      "url": "http://localhost:37373/mcp"
    },
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}"
    }
  },
  "plugin": [
    "oh-my-opencode",
    "opencode-openai-codex-auth"
  ],
  "provider": {
    "openai": {
      "name": "OpenAI",
      "api": "codex",
      "options": {
        "timeout": 300000
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT-5.2"
        },
        "o3": {
          "name": "o3",
          "thinking": true
        },
        "o4-mini": {
          "name": "o4-mini",
          "thinking": true
        },
        "codex-1": {
          "name": "Codex-1"
        }
      }
    },
    "anthropic": {
      "options": {
        "timeout": 600000
      }
    }
  }
}
