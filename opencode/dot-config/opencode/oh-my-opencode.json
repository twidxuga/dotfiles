{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "agents": {
    "librarian": {
      "model": "opencode/big-pickle",
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    },
    "explore": {
      "model": "opencode/big-pickle",
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": "ask",
        "webfetch": "allow"
      }
    },
    "frontend-ui-ux-engineer": {
      "model": "anthropic/claude-opus-4-5",
      "permission": {
        "edit": "allow",
        "write": "allow",
        "bash": "ask",
        "webfetch": "allow"
      }
    },
    "document-writer": {
      "model": "anthropic/claude-opus-4-5",
      "permission": {
        "edit": "allow",
        "write": "allow",
        "bash": "deny",
        "webfetch": "allow"
      }
    },
    "multimodal-looker": {
      "model": "anthropic/claude-opus-4-5",
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    },
    "oracle": {
      "model": "openai/gpt-5.2",
      "temperature": 0.3,
      "permission": {
        "edit": "allow",
        "write": "allow",
        "bash": "ask",
        "webfetch": "allow"
      }
    },
    "Sisyphus": {
      "model": "anthropic/claude-opus-4-5",
      "temperature": 0.3,
      "permission": {
        "edit": "allow",
        "write": "allow",
        "bash": "ask",
        "webfetch": "allow"
      }
    }
  },
  "sisyphus_agent": {
    "disabled": false,
    "default_builder_enabled": false,
    "planner_enabled": true,
    "replace_plan": true
  },
  "experimental": {
    "preemptive_compaction_threshold": 0.85,
    "truncate_all_tool_outputs": true,
    "aggressive_truncation": true,
    "auto_resume": true
  },
  "claude_code": {
    "mcp": true,
    "commands": true,
    "skills": true,
    "agents": true,
    "hooks": true
  }
}
