# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '

alias ll='ls -ltrah'
alias vi='nvim'
alias vim='nvim'

source ~/.environment

source ~/.aliases
source ~/.k8src

# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/ricardo.santos/.cache/lm-studio/bin"
